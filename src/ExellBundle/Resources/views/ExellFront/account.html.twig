{% extends'@Exell/layoutConsult.html.twig' %}

{% block title %}

{% endblock %}

{% block list_body %}
<!--NAV BAR-->
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('exell_homepage') }}">
                <img src="{{ asset('bundles/exell/image/exell.jpg') }}"  class="logoexell"  alt="Exell-Immo">
            </a>
            
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li id="Accueil" class=""><a href="{{ path('exell_homepage') }}">Accueil</a></li>
                <li id="lots"><a href="{{ path('exell_list') }}">Voir les lots</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mon compte <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                            <li><p class="whoami">Vous êtes : {{ app.user.username }}</p></li>
                            <li class="divider"></li>
                            <li class=""><a href="{{ path('exell_account') }}">Voir les réservations</a></li>
                            <li></li>
                            <li class="divider"></li>
                            <li id="Connect"><a href="{{ path('fos_user_security_logout') }}">Se deconnecter</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li id="Connect"><a href="{{ path('fos_user_security_login') }}">Connecter</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                {% for messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-danger alert-dismissible alreadyinaccount" role="alert">
                            <button type="button" class="close" data-dismiss="alert">
                                <span aria-hidden="true">&times;</span>
                                <span class="sr-only">Close</span>
                               </button>
                            {{ message }}
                        </div>
            </div>
            <div class="col-sm-3">
                    {% endfor %}
                {% endfor %}
                {% for leBien in app.user.lesBiens %}
                {% if loop.index <= 4 %}
                <div class="titleLot">
                    <a href="{{ path('exell_showlot',{'id':leBien.id}) }}"><h3>{{ leBien.nomBien }}</h3></a>
                </div>
                <div class="contentLot">
                    <div class="piccol fl">
                        <div class="imglot">
                            {% for picture in leBien.images %}
                                <a href="{{ path('exell_showlot',{'id':leBien.id}) }}"> <img class="lotpicture {% if loop.index != 1  %} nodisp {% endif %}" src="{{ picture.url }}" alt="{{ picture.alt }}"></a>
                            {% endfor %}
                            {% for price in leBien.prix %}
                                <p> A partir de  : {{ price.priceMin }} €</p>
                            {% endfor %}
                        </div>
                        <div class="price">
                            <p></p>
                        </div>
                    </div>
                    <div class="descrHolder">
                        <div class="categ fl">
                            {% for categories in leBien.categories %}
                                <p><b>Categorie</b> : {{ categories.nomCategorie }}</p>
                            {% endfor %}
                        </div>
                        <div class="clr">
                        </div>
                        <div class="addr">
                            <p><b>Adresse </b>: {{ leBien.adress.numeroVoie }} {{ leBien.adress.typeVoie }} {{ leBien.adress.ville }} , {{ leBien.adress.codePostal }}</p>
                        </div>
                        <div class="description">
                            <p><b>Description : </b>  {{ leBien.presentation.desciption }}</p>
                        </div>
                        <div class="suppresa">
                            <a href="{{ path('exell_delete',{id:leBien.id})}}"><button type="submit" class="btn btn-danger">Annuler la réservation</button></a>
                        </div>
                        <div class="clr">
                        </div>
                    </div>
                    <div class="clr footer"></div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}